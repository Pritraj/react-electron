{
  "name": "react-electron",
  "version": "0.1.0",
  "private": true,
  "main": "./main.js",
  "build": {
    "appId": "com.pritam",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extends":null
  },
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "dev": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-is-dev": "^2.0.0",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0"
  }
}
